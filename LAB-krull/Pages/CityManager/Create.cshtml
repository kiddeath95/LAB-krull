@page
@model LAB_krull.Pages.CityManager.CreateModel

@{
    ViewData["Title"] = "Create City";
}

<div class="col-4">
    <form method="post">
        <div class="mb-3">
            <label for="cityName">Enter city</label>
            <input class="form-control" type="text" name="cityName" />
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
    <p>@Model.Message</p>
    @if(Request.HasFormContentType && !string.IsNullOrWhiteSpace(Model.CityName))
    {
        <p>You submitted @Model.CityName</p>
    }
</div>